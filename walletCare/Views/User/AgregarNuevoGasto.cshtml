

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@section Styles{ <link rel="stylesheet" href="~/css/nuevoIngreso.css" />}

<div class="container-fluid" id="principio">
   
     <div class="ball">
             </div>
        <div class="shadow"></div>
        
    
        
        <div class="columnaDerecha col-md-6 col-sm-12" id="aport">
            
            <h1 class="ahorro">Nuevo gasto</h1>

     <form id="formulario" method="POST" asp-action="AgregarGasto" asp-controller="User">
         
