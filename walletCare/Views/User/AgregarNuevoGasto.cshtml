            </div>

                <div class="form-group">
        <label for="nombre" class="ingreso1">Ingresar nombre :</label>
        <input type="nombre" placeholder="Nombre" name="nombre" className="form-control margin-top font-size-weight" ></input>
        </div>

            <div class="form-group">
        <label for="categoria" class="ingreso1">Ingresar categoria :</label>
    
        <input type="categoria" placeholder="Categoria" name="categoria" className="form-control margin-top font-size-weight" ></input>
        </div>


            <button type="submit" class="btn btn-dark margin-top-btn" id="guardar">Guardar</button>
     </form>

        </div>
